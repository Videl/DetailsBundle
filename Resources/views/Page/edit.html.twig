{% extends 'VidelDetailsBundle::base.html.twig' %}

{% block title %}> Edit of Page {{entity.title}}{% endblock %}

{% form_theme edit_form 'VidelDetailsBundle:Form:fields.html.twig' %}

{% block body %}

<h1>Page edit</h1>

<form action="{{ path('page_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('videl_admin_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('page_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>

{% endblock %}