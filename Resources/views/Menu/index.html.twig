{% extends 'VidelDetailsBundle::base.html.twig' %}

{% block title %}List of Menus{% endblock %}

{% block body %}

<h1>Menu list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Position</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('menu_crud_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.position }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('menu_crud_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('menu_crud_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('menu_crud_new') }}">
            Create a new entry
        </a>
    </li>
</ul>

{% endblock %}