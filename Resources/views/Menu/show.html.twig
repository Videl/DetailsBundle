{% extends 'VidelDetailsBundle::base.html.twig' %}

{% block title %}> ADMIN > All Menus{% endblock %}

{% block body %}
<h1>Menu</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Position</th>
            <td>{{ entity.position }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('videl_admin_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('menu_crud_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('menu_crud_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}